<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-3">Tag編集</h2>
      <%= form_with model: @tag, url: admin_tag_path, local: false do |f| %>
        <div class="form-group text-center mb-3">
          <%= f.label :name, "Tag名" %>
          <%= f.text_field :name, id:"name" %>
          <%= f.submit "更新", class:"btn btn-warning rounded-pill ml-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
