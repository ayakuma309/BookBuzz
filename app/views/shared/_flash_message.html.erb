<% flash.each do |message_type, message| %>
  <% if message_type == 'success' %>
    <div class="text-green-300 bg-green-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% elsif message_type == 'error' %>
    <div class="text-red-300 bg-red-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% elsif message_type == 'warning' %>
    <div class="text-yellow-300 bg-yellow-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% else %>
    <div class="text-blue-300 bg-blue-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% end %>
<% end %>
