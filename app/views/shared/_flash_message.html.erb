<% flash.each do |message_type, message| %>
  <% if message_type == 'success' %>
    <div class="text-gray-600 bg-green-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% elsif message_type == 'error' %>
    <div class="text-gray-600 bg-red-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% elsif message_type == 'warning' %>
    <div class="text-gray-600 bg-yellow-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% else %>
    <div class="text-gray-600 bg-blue-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% end %>
<% end %>
