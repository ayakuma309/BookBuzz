<div class="book-container">
  <div class="book">
    <%= image_tag(@book.large_image_url) %>
  </div>
</div>

<div class="flex items-end justify-between mb-3" >
  <div class="font-bold text-3xl mt-6">
    <%= @book.title%>
    <small class="text-xs"><%= @book.sales_date %></small>
  </div><br>
  <div>
    <%= link_to @book.item_url do %>
      <span class="text-sm mt-1">楽天へはこちら</span>
    <% end %>
  </div>
</div>

<div class="flex items-center p-4 card_book card_height">
  <%= simple_format(@book.item_caption) %>
  <div>
    <%= render 'bookmark_button', { book: @book } %>
  </div>
</div>
<p class="mb-3 flex justify-center text-2xl font-semibold font-mono mt-10">
  <%= @book.author%>の他のおすすめ本
</p>

<div class="flex flex-wrap justify-center">
  <% @author_other_books.each do |book| %>
    <%= render "recommend_books", book: book %>
  <% end %>
</div>
